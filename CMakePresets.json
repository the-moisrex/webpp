{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Debug Default",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang",
            "inherits": "default",
            "displayName": "Clang debug",
            "description": "Clang build using Ninja generator",
            "binaryDir": "${sourceDir}/build-clang",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang"
            }
        },
        {
            "name": "default-release",
            "inherits": "default",
            "displayName": "Default Release",
            "description": "Default release build using Ninja generator",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang",
            "displayName": "Clang Release",
            "description": "Clang release build using Ninja generator",
            "binaryDir": "${sourceDir}/build-clang-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x64-msvc-debug",
            "displayName": "x64(msvc)/debug",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build-x64-windows",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "BUILD_TESTING": true,
                "BUILD_SHARED_LIBS": true,
                "CMAKE_BUILD_TYPE": "Debug",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "CMAKE_SYSTEM_VERSION": "10.0.19041.0"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default-build",
            "configurePreset": "default",
            "hidden": true
        },
        {
            "name": "tests",
            "targets": [
                "test-bodies",
                "test-cache",
                "test-charset",
                "test-concurrency",
                "test-const-list",
                "test-context",
                "test-convert",
                "test-cookies",
                "test-crypto",
                "test-dynamic-router",
                "test-extensions",
                "test-find-str",
                "test-functional",
                "test-header-accept-encoding",
                "test-http-parser",
                "test-ipv4",
                "test-ipv6",
                "test-istring",
                "test-json",
                "test-logger",
                "test-memory",
                "test-properties",
                "test-request",
                "test-response",
                "test-router",
                "test-routes",
                "test-server",
                "test-sql",
                "test-string",
                "test-traits",
                "test-tuple",
                "test-type-traits",
                "test-unicode",
                "test-uri-string",
                "test-uri",
                "test-ustring",
                "test-utils-casts",
                "test-utils-strings",
                "test-validations",
                "test-views"
            ],
            "inherits": "default-build"
        },
        {
            "name": "benchmarks",
            "targets": "webpp-benchmarks",
            "inherits": "default-build"
        },
        {
            "name": "examples",
            "targets": [
                "cgi-hello-world",
                "cgi-application",
                "json-app",
                "beast-json",
                "beast-view"
            ],
            "inherits": "default-build"
        },
        {
            "name": "cgi-hello-world",
            "targets": "cgi-hello-world",
            "inherits": "default-build"
        },
        {
            "name": "cgi-application",
            "targets": "cgi-application",
            "inherits": "default-build"
        },
        {
            "name": "json-app",
            "targets": "json-app",
            "inherits": "default-build"
        },
        {
            "name": "beast-json",
            "targets": "beast-json",
            "inherits": "default-build"
        },
        {
            "name": "beast-view",
            "targets": "beast-view",
            "inherits": "default-build"
        }
    ],
    "testPresets": [
